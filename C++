#include <iostream>
#include <string>
#include <unordered_map>
#include <vector>
#include <algorithm>

// Represents a point of interest
struct PointOfInterest {
    std::string name;
    std::string type;
    std::string description;
};

// Manages information about Virpur
class VirpurInfoSystem {
private:
    std::unordered_map<std::string, std::string> town_facts;
    std::vector<PointOfInterest> points_of_interest;

public:
    VirpurInfoSystem() {
        town_facts["Location"] = "Rajkot district, Gujarat, India";
        town_facts["Population"] = "Approx. 18,000 (town area)";
        town_facts["Known For"] = "Jalaram Bapa Temple (Virpur Jalaram Mandir) and the Sadavrat service";

        points_of_interest.push_back({"Jalaram Bapa Temple", "Religious Site", "A revered temple dedicated to the saint Jalaram Bapa, famous for its 'Sadavrat' (free meal service)."});
        points_of_interest.push_back({"Jalaram Bapa Samadhi", "Pilgrimage Site", "The memorial site where the saint took Samadhi."});
        points_of_interest.push_back({"Virpur Railway Station", "Landmark", "The small local station, a key access point for pilgrims."});
    }

    void get_town_fact(const std::string& fact_name) const {
        if (town_facts.count(fact_name)) {
            std::cout << fact_name << ": " << town_facts.at(fact_name) << std::endl;
        } else {
            std::cout << "Fact not found: " << fact_name << std::endl;
        }
    }
    
    void search_points_of_interest(const std::string& search_term) const {
        std::cout << "\n--- Search Results for '" << search_term << "' ---" << std::endl;
        bool found = false;
        std::string lower_search_term = search_term;
        // Convert search term to lowercase for case-insensitive search
        std::transform(lower_search_term.begin(), lower_search_term.end(), lower_search_term.begin(), ::tolower);

        for (const auto& poi : points_of_interest) {
            std::string lower_name = poi.name;
            std::transform(lower_name.begin(), lower_name.end(), lower_name.begin(), ::tolower);
            
            if (lower_name.find(lower_search_term) != std::string::npos || 
                poi.type.find(search_term) != std::string::npos) {
                std::cout << "Name: " << poi.name << std::endl;
                std::cout << "Type: " << poi.type << std::endl;
                std::cout << "Description: " << poi.description << std::endl;
                std::cout << "----------------------------------------" << std::endl;
                found = true;
            }
        }
        if (!found) {
            std::cout << "No matching points of interest found." << std::endl;
        }
    }
};

int main() {
    VirpurInfoSystem info_system;
    
    // Display general facts
    info_system.get_town_fact("Location");
    info_system.get_town_fact("Known For");

    // Search for landmarks
    info_system.search_points_of_interest("Temple");
    info_system.search_points_of_interest("Railway");

    return 0;
}
